page {
    width: 100%;
    height: 100%;
}
.my-user{
    display: block;
    padding-top: 40px;
    height: 120px;
    background: 
        url(https://blog.jczxw.cn/files/bg_bottom.png) 38% bottom/auto 30% no-repeat, 
        url(https://blog.jczxw.cn/files/bg_left.png) left top/auto 100% no-repeat;
        /* url(https://blog.jczxw.cn/files/bg_right.png) right top/auto 100% no-repeat,  */
        /* url(https://blog.jczxw.cn/files/bg.png) center/100% 100% no-repeat; */
    background-color: #3385ff;
    text-align: center;
    position: relative;
}
.my-user .user-img{
    display: block;
    width: 72px;
    height: 72px;
    border-radius: 50%;
    margin: 0 auto;
    box-sizing: border-box;
    border:2px solid;
    border-color: rgba(0,0,0,0.2)
}
.my-user image{
    display: block;
    width: 68px;
    height: 68px;
    border-radius: 50%;
    margin: 0 auto;
}
.my-user .nickName{
    color: #fff;
}