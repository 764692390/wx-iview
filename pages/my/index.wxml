<view class="my-user">
    <view class="user-img">
        <image wx:if="{{userInfo === null}}" src="https://blog.jczxw.cn/files/default_user.png" mode="userInfo.avatarUrl"></image> 
        <image wx:else src="{{userInfo.avatarUrl}}" mode="userInfo.avatarUrl"></image> 
    </view>
    <view class="nickName">{{userInfo.nickName}}</view>
</view>
 <i-panel>
